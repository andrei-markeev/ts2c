{
  "name": "ts2c",
  "version": "2.1.1",
  "description": "TypeScript/JavaScript to C transpiler",
  "main": "ts2c.js",
  "bin": {
    "ts2c": "./bin/ts2c"
  },
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "typescript": "2.1.6"
  },
  "devDependencies": {
    "browserify": "^13.0.1",
    "browserify-shim": "^3.8.12",
    "remap-istanbul": "^0.6.4"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "typescript": "global:ts"
  },
  "scripts": {
    "build": "tsc && browserify ts2c.js -x typescript -s ts2c -o ts2c.bundle.js",
    "clean": "cd tests && make clean",
    "cover": "npm test && cd tests && make -B",
    "prepublish": "tsc",
    "test": "npm run build && cd tests && make -B all"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/andrei-markeev/ts2c.git"
  },
  "author": "Andrei Markeev",
  "license": "ISC"
}
